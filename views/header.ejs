<div class="ui large menu">
  <a href="/" class="item"><%= $app.name %></a>
  <div class="item"><%= $app.descripion %></div>
  <div class="right menu">
    <% if (ctx.session.user) { %>
      <a href="/logout" class="item">登出</a>
    <% } else { %>
      <a href="/signup" class="item">注册</a>
      <a href="/signin" class="item">登录</a>
    <% } %>
  </div>
</div>

<% if (ctx.flash && ctx.flash.success) { %>
  <div class="flash">
    <div class="ui green message"><i class="close icon"></i><%= ctx.flash.success %></div>
  </div>
<% } %>
<% if (ctx.flash && ctx.flash.error) { %>
  <div class="flash">
    <div class="ui red message"><i class="close icon"></i><%= ctx.flash.error %></div>
  </div>
<% } %>

<script type="text/javascript">
  $('.message .close').on('click', function() {
    $(this).closest('.message').fadeOut();
  });
</script>